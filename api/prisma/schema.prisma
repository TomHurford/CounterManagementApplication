generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @unique @default(autoincrement())
  forename    String
  surname     String
  email       String    @unique
  phoneNumber String?   @unique
  password    String?
  counter     Counter[]
}

model Counter {
  id           Int    @id @unique @default(autoincrement())
  counterName  String
  counterValue Int
  userId       User   @relation(fields: [user], references: [id])
  user         Int
}

